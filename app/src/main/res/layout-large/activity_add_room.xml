<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/room_image"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/home4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toRightOf="@+id/room_image"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/room_title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/add_room"
                    android:textSize="50sp"
                    />

                <Button
                    android:layout_marginTop="100dp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybutton"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/room_title"
                    android:text="@string/add_pic"/>
            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:layout_below="@+id/room_image"
                android:id="@+id/room_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/notes"
                android:textSize="30sp"
                />

            <EditText
                android:layout_marginRight="20dp"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_notes"
                android:layout_below="@id/room_image"
                android:layout_toRightOf="@id/room_notes"
                android:theme="@style/MyEditText"/>

            <TextView
                android:id="@+id/placeholder2"
                android:layout_width="550dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>